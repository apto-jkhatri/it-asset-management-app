{
  "name": "assetguard-desktop",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "setup:db": "ts-node server/setup.ts",
    "setup:db:clean": "cross-env CLEAN=true ts-node server/setup.ts",
    "dev:server": "ts-node-dev --respawn --transpile-only server/index.ts",
    "dev:server:node": "node --loader ts-node/esm server/index.ts",
    "dev:server:cjs": "node server/index.cjs",
    "seed:server": "ts-node server/seed.ts",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "tsc && vite build && electron-builder --win --publish=never"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lucide-react": "^0.263.1",
    "mysql2": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "recharts": "^2.7.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.assetguard.app",
    "productName": "AssetGuard",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "electron/**/*",
      "server/**/*"
    ],
    "asarUnpack": [
      "server/**/*"
    ],
    "win": {
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "target": ["nsis"]
    }
  }
}
